{
  "name": "webhdfs-client",
  "version": "0.0.1",
  "description": "A WebHDFS client library with Promise support. Written in TypeScript.",
  "main": "/dist/index.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "test:nocover": "jest",
    "test:watch": "jest --watch ",
    "build": "tsc -p tsconfig.json --pretty",
    "build:prod": "tsc -p tsconfig.release.json --pretty",
    "lint": "tslint -t stylish -c tslint.json --type-check -p tsconfig.json"
  },
  "keywords": [
    "hadoop",
    "webhdfs",
    "hdfs",
    "rest"
  ],
  "author": "Josh Gillespie <josh.gillespie@polarissolutions.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bluebird": "^3.5.2",
    "@types/jest": "^19.2.2",
    "@types/request": "0.0.42",
    "@types/request-promise": "^4.1.33",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.10",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "coverageDirectory": "output/reports",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.d.ts"
    ]
  }
}
