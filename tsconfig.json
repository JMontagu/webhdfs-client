{
    "compilerOptions": {
        "module": "commonjs",
        "alwaysStrict": true,
        "declaration": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "target": "es5",
        "forceConsistentCasingInFileNames": true,
        "outDir": "output/build",
        "allowUnusedLabels": false,
        "noImplicitReturns": true
    },
    "include": [
        "src/**/*.ts"
    ]
}